*.pfx
*.jks

# Certificates directory
certs/

# Key backups
backend/keys/backupkeys/

# Kubernetes Secrets
**/secret.yaml
**/sealed-secret.yaml
**/*-secret.yaml

# Test keys (should use example keys instead)
test_integration_key.pem

